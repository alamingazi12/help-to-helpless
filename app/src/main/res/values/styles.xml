<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">#ffffff</item>

        <item name="colorAccent">#ffffff</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="AppTheme.NoActionBars" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Custom_Style" parent="TextAppearance.Design.Tab">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/artifika</item>
        <item name="android:textColor">#ffffff</item>

    </style>
    <style name="Custom_ActionBar_Style" parent="android:Widget.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/alexbold</item>
        <item name="android:textColor">#000</item>

    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#f26419</item>
        <item name="stFont">@font/raleway_light</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fad4c0</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>

        <item name="stLength">LONG</item> LONG or SHORT

        <item name="stRadius">15dp</item>
    </style>
    <style name="TextBlackTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="TextName">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>

</resources>