<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".DealerRegActivity">


        <LinearLayout
            android:background="#F7F7F7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/view_profile_image"
                android:layout_width="80dp"
                android:layout_marginBottom="20dp"
                android:layout_height="80dp"
               android:src="@drawable/dummy"
                android:layout_marginTop="50dp"
               />

            <Button


                android:id="@+id/pic_profile"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textAllCaps="false"
                android:background="@drawable/button_style"
                android:text="Upload Photo "
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"/>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:focusable="true"
                android:textColorHint="#adb5bd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/dladdres"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"

                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:hint="Address"
                    android:inputType="textCapWords
"                   android:imeOptions="actionNext"
                    android:ems="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:focusable="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/dlmail"
                android:textColorHint="#adb5bd"
                android:imeOptions="actionNext"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>





            <Button
                android:textColor="#000000"
               android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_down_select"
                android:background="@drawable/edit_text_style"
                android:layout_width="match_parent"
                android:focusable="true"
                android:textSize="19sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:fontFamily="@font/relway_regular"
                android:text="Select Zilla"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/select_shpzila"
                android:layout_marginTop="15dp"
                android:focusableInTouchMode="true"
                android:layout_height="45dp"/>





            <LinearLayout

                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/shpimage"
                        android:src="@drawable/documents"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/pic_shop"
                        android:layout_width="110dp"

                        android:layout_height="40dp"
                       android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="51dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_style"
                        android:padding="5dp"
                        android:text="Upload Docs"
                        android:textAllCaps="false"
                        android:textColor="#ffffff" />

                    <TextView
                        android:textColor="#000000"
                        android:gravity="center"
                          android:text="Shop Pic,NID etc"
                          android:layout_below="@+id/pic_shop"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                </RelativeLayout>


            </LinearLayout>


            <Button
                android:id="@+id/dealer_signup"
                android:text="Sign Up"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_style"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>


        </LinearLayout>


</LinearLayout>