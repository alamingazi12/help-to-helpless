<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/_division"

        android:text="Australia"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="@font/latom"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/_zilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_division"
        android:layout_marginStart="10dp"

        android:textSize="17sp"
        android:fontFamily="@font/latom"
        android:text="Australia"
        android:textColor="#000" />
        <TextView
            android:id="@+id/thana"
            android:textColor="#000000"
            android:textSize="13dp"
            android:fontFamily="@font/latom"
            android:inputType="textCapWords"
            android:text="Khan Jahan Ali"
            android:layout_marginStart="10dp"

            android:layout_below="@id/_zilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:textColor="#000000"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:textStyle="bold"
        android:textSize="14sp"

        android:fontFamily="@font/raleway_light"
        android:id="@+id/_currency"
        android:text="Select"
        android:padding="3dp"

        android:textAllCaps="false"
        android:background="@drawable/selec_btn_style"



        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="30dp"/>
    <View
        android:background="#9e9e9e"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>