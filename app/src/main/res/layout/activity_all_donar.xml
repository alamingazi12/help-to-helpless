<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".AllDonarActivity">

    <TextView
        android:id="@+id/heading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alexbold"
        android:text="Add Money"
        android:textColor="#000"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/dsearch_text"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_below="@+id/heading_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="51dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:paddingLeft="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/donar_send_money_container"
        android:layout_width="match_parent"
        android:layout_below="@+id/dsearch_text"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_search_money"
        android:layout_width="105dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/dsearch_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-7dp"
        android:layout_toEndOf="@+id/dsearch_text"
        android:text="Search" />

</RelativeLayout>