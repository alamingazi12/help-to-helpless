<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#3f37c9"
    app:cardCornerRadius="8dp"
    android:background="#f0efeb"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dlr_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_border_width="2dip"
            android:scaleType="fitCenter"
            app:riv_corner_radius="13dip"
            app:riv_mutate_background="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/shopimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.488" />

        <TextView
            android:id="@+id/dname"
            style="@style/TextBlackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/latom"
            android:text="Alamin Gazi"
            android:textColor="#fff"
            android:textFontWeight="400"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/dlr_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latom"
            android:text="Fultala High school Khulna"
            android:textColor="#fff"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/dname"
            app:layout_constraintTop_toBottomOf="@+id/dname" />

        <TextView
            android:id="@+id/dlr_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/latom"
            android:text="01988983612"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/shopaddress"
            app:layout_constraintTop_toBottomOf="@+id/shopaddress" />

        <Button
            android:id="@+id/confirm_dlr"
            android:layout_width="71dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/item_button"
            android:fontFamily="@font/latom"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textFontWeight="500"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.302"
            app:layout_constraintStart_toStartOf="@+id/dlr_contact" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

