<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_tranparent"
    tools:context=".AddDonarActivity">
    <TextView
        android:layout_width="wrap_content"
        android:text="Add Donar"
        android:textSize="38sp"
        android:textColor="#000"
        android:layout_marginTop="70dp"
        android:id="@+id/heading"

        android:layout_centerHorizontal="true"
        android:fontFamily="@font/latom"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donar_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_text"
        android:layout_marginTop="2dp">


    </androidx.recyclerview.widget.RecyclerView>
   <ProgressBar
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:id="@+id/_progress"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/heading"
        android:layout_marginLeft="20sp"
       android:fontFamily="@font/alexbold"
        android:layout_marginTop="76dp"
        android:layout_marginRight="20sp"

        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="9dp"
        android:text="" />

</RelativeLayout>