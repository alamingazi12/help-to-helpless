<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".DealerRegActivity">


    <LinearLayout
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:background="@drawable/back_style_background"
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_back" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"

            android:id="@+id/edit_profile_image"
            android:layout_width="80dp"
            android:layout_marginBottom="20dp"
            android:layout_height="80dp"
            android:src="@drawable/dummy"
            android:layout_marginTop="45dp"
            />

<TextView
    android:id="@+id/edit_name"
    android:textColor="#000000"
    android:layout_gravity="center"
    android:textSize="26dp"
    android:textStyle="bold"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="8dp"
    android:text="MD. Mostain Shikder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:textColorHint="#adb5bd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/edit_address"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"

            android:layout_marginTop="7dp"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Address"
                android:inputType="textCapWords
"                   android:imeOptions="actionNext"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/edit_mail"

            android:textColorHint="#adb5bd"
            android:imeOptions="actionDone"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>





        <Button
            android:textColor="#000000"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/ic_down_select"
            android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"

            android:textSize="19sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:fontFamily="@font/relway_regular"
            android:text="Select Zilla"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"

            android:id="@+id/update_shpzila"
            android:layout_marginTop="15dp"

            android:layout_height="45dp"/>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:textColorHint="#adb5bd"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:id="@+id/mdonation"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"

            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Donation/ Month"
                android:inputType="number
"                   android:imeOptions="actionNext"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout

            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/editshpimage"
                    android:src="@drawable/documents"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/editpic_shop"
                    android:layout_width="110dp"
                    android:imeOptions="actionDone"
                    android:layout_height="46dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentTop="true"

                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/butttonstyle"
                    android:padding="5dp"
                    android:text="Upload Docs"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="Shop Pic,NID etc"
                    android:layout_below="@+id/editpic_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/edit_dealer"
            android:text="Update"

            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/latom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/butttonstyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


    </LinearLayout>


</LinearLayout>