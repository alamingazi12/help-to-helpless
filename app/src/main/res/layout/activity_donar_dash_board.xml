<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DonarDashBoardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">


        <TextView
            android:id="@+id/dlr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Md.Sirazul Islam"
            android:textColor="#000000"
            android:textFontWeight="500"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/belgrano"
            android:text="Your Balance"
            android:textColor="#b7b7a4"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/dlr_name"
            app:layout_constraintTop_toBottomOf="@+id/dlr_name" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alexbold"
            android:text="TK"
            android:textColor="#000000"
            android:textFontWeight="500"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dnr_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/number_font"
            android:text="0.0"
            android:textColor="#000000"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_donar"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginEnd="28dp"
            android:src="@drawable/persons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintStart_toEndOf="@+id/dlr_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/back_style_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <ImageButton

            android:background="#f8f9fa"
            android:id="@+id/menu_icon_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:background="#f8f9fa"
        android:padding="7dp"

        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"

            android:layout_width="match_parent"
            android:layout_height="200dp">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardElevation="3dp"
                android:animationCache="true"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                app:cardMaxElevation="3dp"
                android:layout_weight=".5"
                android:layout_height="165dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView

                        android:id="@+id/num_of_donars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/number_font"
                        android:text="0"
                        android:textColor="#000000"
                        android:textFontWeight="500"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.384" />

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/TextBlackTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/artifika"
                        android:gravity="center"
                        android:text="Dealer \n Connection"
                        android:textColor="#000000"

                        android:textFontWeight="400"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#ffffff"
                android:layout_width="0dp"
                android:animationCache="true"
                app:cardElevation="3dp"
                app:cardCornerRadius="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"

                android:layout_weight=".5"
                android:layout_height="165dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dnr_avg_donation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/number_font"
                        android:text="0"
                        android:textColor="#000000"
                        android:textFontWeight="600"
                        android:textSize="28sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView13"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.401" />

                    <TextView
                        android:fontFamily="@font/alexbold"
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TK"
                        android:paddingRight="4dp"
                        android:textColor="#000000"
                        android:textSize="27sp"
                        app:layout_constraintEnd_toStartOf="@+id/dnr_avg_donation"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/dnr_avg_donation" />

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/TextBlackTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="36dp"
                        android:fontFamily="@font/artifika"
                        android:gravity="center"
                        android:text="Avg Month"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donation"
                        android:fontFamily="@font/artifika"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView14"
                        app:layout_constraintHorizontal_bias="0.538"
                        app:layout_constraintStart_toStartOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_history"
                android:textFontWeight="400"
                android:textSize="17sp"
                android:fontFamily="@font/relway_medium"
                android:textColor="#ffffff"
                android:background="@drawable/donate_btn_style"
                android:textAllCaps="false"
                android:text="View Donation History"

                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="56dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp">
            <Button

                android:id="@+id/add_dealers"
                android:fontFamily="@font/relway_semibold"
                android:background="@drawable/donate_btn_style"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"

                android:textColor="#ffffff"
                android:text="Add Dealer"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/donate_to_dealer"
                android:textFontWeight="500"
                android:layout_marginBottom="10dp"

                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:layout_weight=".5"
                android:background="@drawable/donate_btn_style"
                android:fontFamily="@font/relway_semibold"
                android:text="Donate"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>