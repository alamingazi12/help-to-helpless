<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/adusername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/text_layout_style"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Username"

        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingLeft="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="237dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:autoSizeMaxTextSize="35dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admbutton_login"
        android:layout_width="200dp"

        android:layout_height="44dp"
        android:background="@drawable/login_btn_style"
        android:focusable="true"
        android:fontFamily="monospace"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/adusername"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/adusername"
        app:layout_constraintTop_toBottomOf="@+id/adpasswrd"
        app:layout_constraintVertical_bias="0.18" />

    <EditText
        android:id="@+id/adpasswrd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/text_layout_style"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adusername" />
</androidx.constraintlayout.widget.ConstraintLayout>