<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:background="@color/page_background_tranparent"
    android:layout_height="match_parent"
    tools:context=".AddDealerActivity">
    <TextView
        android:layout_marginTop="40dp"
        android:textSize="34dp"
        android:textColor="#000"
        android:fontFamily="@font/latom"
        android:layout_centerHorizontal="true"
        android:id="@+id/heading"
        android:text="Add Dealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dealer_container"

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/search_text"
        android:layout_marginTop="1dp">

    </androidx.recyclerview.widget.RecyclerView>
   <ProgressBar
       android:id="@+id/_progress"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/heading"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/latom"
        android:hint="Search Here" />

    <ImageButton
        android:background="@drawable/back_style_background"
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_back" />
</RelativeLayout>