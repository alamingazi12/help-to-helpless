<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="7dp"
    app:cardBackgroundColor="#3f37c9"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dlr_profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/shopimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            app:riv_corner_radius="13dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/dname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/relway_semibold"
            android:text="Alamin Gazi"
            android:textColor="#ffffff"
            android:textFontWeight="400"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/dlr_profile_image"
            app:layout_constraintTop_toTopOf="@+id/dlr_profile_image" />

        <TextView
            android:id="@+id/shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/relway_regular"
            android:text="Fultala High school Khulna"
            android:textColor="#fff"

            android:textFontWeight="400"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/dname"
            app:layout_constraintTop_toBottomOf="@+id/dname" />

        <TextView
            android:fontFamily="@font/latom"
            android:id="@+id/dlr_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="01988983612"


            android:textSize="17dp"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="@+id/shopaddress"
            app:layout_constraintTop_toBottomOf="@+id/shopaddress" />

        <Button
            android:id="@+id/confirm_dlr"
            android:layout_width="90dp"
            android:layout_height="27dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_button"
            android:fontFamily="@font/relway_semibold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Approve"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textFontWeight="500"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/dlr_contact"
            app:layout_constraintTop_toBottomOf="@+id/dlr_contact" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>