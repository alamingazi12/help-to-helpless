<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#6200EE"
    android:background="#ffffff"
    app:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dnr_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/persons"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32"
            app:riv_corner_radius="15dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/donar_phones"
            style="@style/TextBlackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/latom"
            android:text="Alamin Gazi"
            android:textColor="#fff"
            android:textFontWeight="400"
            android:textSize="21sp"
            app:layout_constraintStart_toEndOf="@+id/dnr_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dnr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latom"
            android:text="Fultala Khulna"
            android:textColor="#fff"

            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/donar_phones"
            app:layout_constraintTop_toBottomOf="@+id/donar_phones" />

        <TextView
            android:id="@+id/cl_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/alexbold"
            android:text="01629630487"
            android:textColor="#fff"
            android:textFontWeight="700"
            app:layout_constraintStart_toStartOf="@+id/dnr_address"
            app:layout_constraintTop_toBottomOf="@+id/dnr_address" />

        <Button
            android:id="@+id/cl_discount"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/latom"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textFontWeight="400"
            app:layout_constraintStart_toEndOf="@+id/dnr_image"
            app:layout_constraintTop_toBottomOf="@+id/cl_phone" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>