            android:fontFamily="monospace"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:text="Phone"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"/>

