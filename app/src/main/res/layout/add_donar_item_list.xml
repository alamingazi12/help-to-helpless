<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:background="#ffffff"
    app:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dnr_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"

            android:src="@drawable/persons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/donar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="sans-serif-light"
            android:text="Rajib Molla"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@+id/dnr_image"
            app:layout_constraintTop_toTopOf="@+id/dnr_image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dnr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fultala Khulna, Bangladesh"
            android:textColor="#000000"

            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/donar_name"
            app:layout_constraintTop_toBottomOf="@+id/donar_name"
            app:layout_constraintVertical_bias="0.08" />

        <Button
            android:id="@+id/add_donar_request"
            android:layout_width="97dp"
            android:layout_height="26dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/button_style"
            android:fontFamily="sans-serif-light"
            android:text="Request"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textFontWeight="400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.782" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>