<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.help2helpless">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DonationHistory" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".DonateDealerActivity" android:parentActivityName=".AddedDealerActivity"/>
        <activity
            android:name=".AddedDealerActivity"
            android:parentActivityName=".DonarDashBoardActivity"/>
        <activity android:name=".RequestActivity"  android:parentActivityName=".DonarDashBoardActivity"/>
        <activity android:name=".AddDonarActivity" android:parentActivityName=".DealerActivity" />
        <activity
            android:name=".ClientProfileActivity"
            android:parentActivityName=".DiscountActivity" />
        <activity
            android:name=".DealerActivity"
            android:screenOrientation="portrait"
            android:autoRemoveFromRecents="true"
            android:parentActivityName=".DealerLoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiscountActivity"
            android:parentActivityName=".DealerActivity" />
        <activity
            android:name=".AddDealerActivity"
            android:parentActivityName=".DonarDashBoardActivity" />
        <activity
            android:name=".DonarDashBoardActivity"
            android:autoRemoveFromRecents="true"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait" />
        <activity
            android:name=".DealerRegActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ApprovedActivity" />
        <activity
            android:name=".DealerRequestActivity"
            android:parentActivityName=".AdminDashBoardActivity" />
        <activity
            android:name=".DonarRegisterActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DealerLoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DonarLogin"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdminDashBoardActivity"
            android:parentActivityName=".AdminLogin" android:autoRemoveFromRecents="true" />
        <activity
            android:name=".AdminLogin"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ClientActivity"
            android:parentActivityName=".DealerActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:autoRemoveFromRecents="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>